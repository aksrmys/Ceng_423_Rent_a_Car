@model IEnumerable<Ceng_423_Rent_a_Car.Models.Car>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="mt-3 p-3 shadow rounded">
            <div class="carousel slide" id="carouselExampleSlidesOnly" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/carousel/pexels-tom-fisk-1554646.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/pexels-tom-fisk-2231743.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/pexels-tom-fisk-2231744.jpg" class="w-100 d-block" style="height: 350px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row nt-3">
        @foreach (var item in Model.ToList())
        {
        <div class="col-4">
            <div class="nt-2 p-3 shadow rounded">
                <div class="card" style="height:350px">
                    <img src="~/images/cars/@item.ImagePath" class="card-img-top h-50" />
                    <div class="card-body">
                        <h5 class="text-info">@item.Brand @item.Model</h5>
                            <p class="card-text"><span class="fw-bold">Engine </span>@item.Engine </p>
                            <p class="card-text"><span class="fw-bold">Fuel Type </span>@item.FuelType </p>
                            <p class="card-text"><span class="fw-bold">SeatingCapacity </span>@item.SeatingCapacity</p>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
